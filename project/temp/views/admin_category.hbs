        <div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>Hi, welcome !</h4>
                           
                        </div>
                    </div>
                  
                </div>
                <!-- row -->
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Product Categoty</h4>
                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                    <form action="add_category" method="post">

                                        <div class="form-group col-md-6">
                                                <label>Categoty Name</label>
                                                <input type="text" class="form-control" name="catname" placeholder="Enter Categoty">
                                        </div>

                                        <div class="form-group col-md-6">
                                                <button type="submit" class="btn btn-primary">Add Categoty</button>
                                        </div>

                                                                        
                                    </form>
                                </div>
                            </div>
                        </div>
                  



                <div class="row">                   
                
                    <div class="col-lg-12">
                        <div class="card">
                            
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table primary-table-bordered">
                                        <thead class="thead-primary">
                                            <tr>
                                                <th scope="col">Categoty</th>
                                                <th scope="col">Delete Categort</th>
                                                <th scope="col">Edit Categoty</th>
                                              
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each catname}}
                                            <tr>                              
                                                <td class="text-dark">{{this.catname}}</td>
                                                <td><a href="delete_category?uid={{this._id}}"><button type="button" class="btn btn-danger">Delete</button></a></td>
                                                <td><a href="edit_category?uid={{this._id}}"><button type="button" class="btn btn-primary">Edit</button></a></td>
                                            </tr>
                                            {{/each}}
                                        </tbody>                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                 
                </div>
            </div>
        </div>
