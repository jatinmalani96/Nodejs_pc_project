        <div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>Hi, welcome !</h4>
                           
                        </div>
                    </div>
                  
                </div>
                <!-- row -->
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Add Product</h4>
                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                    <form action="add_product" method="post" enctype="multipart/form-data">
                                        <div class="form-group col-md-6">
                                                <label>Product Name</label>
                                                <input type="text" class="form-control" placeholder="Enter Product Name"  name="pname">
                                        </div>

                                        <div class="form-group col-md-6">
                                                <label>Product Price</label>
                                                <input type="text" class="form-control" placeholder="Enter Product Price" name="price">
                                        </div>

                                        <div class="form-group col-md-6">
                                                <label>Qty</label>
                                                <input type="text" class="form-control" placeholder="Enter Product Qty" name="qty">
                                        </div>

                                        <div class="form-group col-md-6">
                                                <label>Select Category</label>
                                                <select name="catid" id="" class="form-control">
                                                    {{#each catdata}}
                                                    <option value="{{this._id}}"> {{this.catname}}</option>
                                                    {{/each}}

                                                </select>
                                               
                                        </div>

                                        <div class="form-group col-md-6">
                                                <label>Select Images</label>
                                                <input type="file" class="form-control" placeholder="Enter Product Qty" name="img">
                                        </div>

                                    

                                        <div class="form-group col-md-6">
                                                <button type="submit" class="btn btn-primary">Add Product</button>
                                             </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                <div class="row">                   
                
                    <div class="col-lg-12">
                        <div class="card">
                            
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table primary-table-bordered">
                                        <thead class="thead-primary">
                                            <tr>
                                                <th scope="col">Categoty</th>
                                                <th scope="col">Product</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Qty</th>
                                                <th scope="col">Image</th>
                                                <th scope="col">Delete Product</th>
                                                <th scope="col">Edit Product</th>
                                              
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each pdata}}
                                            <tr>
                                                {{#each this.category}}                              
                                                <td class="text-dark">{{this.catname}}</td>
                                                {{/each}}
                                                <td class="text-dark">{{this.pname}}</td>
                                                <td class="text-dark">{{this.price}}</td>
                                                <td class="text-dark">{{this.qty}}</td>
                                                <td class="" ><img width="40" height="40" src="productimg/{{this.img}}" alt=""></td>
                                                {{!-- <td class="text-dark">{{this.img}}</td>                                           --}}
                                                <td><a href="delete_product?pid={{this._id}}"><button type="button" class="btn btn-danger">Delete</button></a></td>
                                                <td><a href="edit_product?pid={{this._id}}"><button type="button" class="btn btn-primary">Edit</button></a></td>
                                            </tr>
                                            {{/each}}
                                        </tbody>                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                 
                </div>
            </div>
        </div>
